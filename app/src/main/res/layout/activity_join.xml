<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".JoinActivity">


    <ImageView
        android:id="@+id/join_logo"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/join_email"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/text_background"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/join_pw"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_background"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="@+id/join_email"
        app:layout_constraintStart_toStartOf="@+id/join_email"
        app:layout_constraintTop_toBottomOf="@+id/join_email" />

    <Button
        android:id="@+id/join_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:text="가입완료"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/join_github"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/join_github"
        app:layout_constraintTop_toBottomOf="@+id/join_github" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/colorBlue"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="@+id/join_logo"
        app:layout_constraintStart_toStartOf="@+id/join_logo"
        app:layout_constraintTop_toBottomOf="@+id/join_logo" />

    <EditText
        android:id="@+id/join_check_pw"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_background"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="@+id/join_pw"
        app:layout_constraintStart_toStartOf="@+id/join_pw"
        app:layout_constraintTop_toBottomOf="@+id/join_pw" />

    <EditText
        android:id="@+id/join_github"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_background"
        android:ems="10"
        android:hint="GitHub 닉네임"
        android:inputType="textPersonName"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="@+id/join_check_pw"
        app:layout_constraintStart_toStartOf="@+id/join_check_pw"
        app:layout_constraintTop_toBottomOf="@+id/join_check_pw" />

</androidx.constraintlayout.widget.ConstraintLayout>